<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"
    tools:context="com.frybynite.magicvisor.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:layout_weight="2"
            android:text="Start Service" />

        <TextView
            android:id="@+id/dressStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:color/holo_blue_dark"
            android:text="Stop Service" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <ToggleButton
            android:id="@+id/heartsButton"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="hearts"
            android:textOff="Hearts"
            android:textOn="Hearts"
            android:textSize="13sp" />

        <ToggleButton
            android:id="@+id/rainbowButton"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="rainbow"
            android:textOff="Rainbow"
            android:textOn="Rainbow" />

        <ToggleButton
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textOff="White Slide"
            android:textOn="White Slide"
            android:onClick="whiteSlide"/>

        <ToggleButton
            android:id="@+id/button5"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="dark"
            android:textOff="Dark"
            android:textOn="Dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pulseButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="pulse"
            android:text="Pulse" />

        <LinearLayout
            android:layout_width="94dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/speedTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pulse Rate" />

            <SeekBar
                android:id="@+id/pulseSpeedBar"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:max="20"
                android:progress="30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="157dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/brightnessTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Brightness" />

            <SeekBar
                android:id="@+id/brightnessBar"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:max="40"
                android:progress="10" />
        </LinearLayout>

        <Button
            android:id="@+id/colorButton"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:onClick="changeColor"
            android:text="Color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <ToggleButton
            android:id="@+id/textButton2"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="scrollText"
            android:textOff="Scroll"
            android:textOn="Scroll" />

        <ToggleButton
            android:id="@+id/popTextButton"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="popText"
            android:textOff="Pop"
            android:textOn="Pop" />

        <EditText
            android:id="@+id/editTextView"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="What to say?"
            android:inputType="text"
            android:maxLength="20"
            android:text="let's go TSM"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Scroll Rate" />

            <SeekBar
                android:id="@+id/scrollRateBar"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="30"
                android:progress="10" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:scrollbars = "vertical"
        />

</LinearLayout>
